#
# Teensy 3.5
# ==========
#
# More information: https://www.pjrc.com/store/teensy35.html
#
# To build the kernel, use:
#   cd sys/mk64/teensy35
#   kconfig Config
#   make clean
#   make
#
# Format of this file is described on page:
# http://retrobsd.org/wiki/doku.php/doc/kconfig
#
architecture    "mk64"
cpu             "MK64FX512"               # Processor variant
board           "TEENSY35"               # Board type
ldscript        "teensy35/mk64fx512.ld" # Linker script

# Standard system options
options         "CPU_KHZ=120000"            # Oscillator frequency of CPU core
options         "BUS_KHZ=60000"             # Frequency of peripheral bus
options		"F_CPU=120000000UL"
options		"F_BUS=60000000UL"
options		"USB_SERIAL"
options		"USB_SERIAL_UART"
options		"NMOUNT=4"
# options         "HALTREBOOT"                # If halted, press key to reboot
# options         "BSP"                       # Board support package

# Root filesystem at /dev/sd0a, swap at /dev/sd0b
config          unix    root on sd0a
                        swap on sd0b

### 17112024, early: disable everything and try to blink a led or bleep the piezo

# Serial UART ports

device           usbuart1                    # Teensy virtual USB UART
#device          uart1                       # USART1
#device          uart2                       # USART2 as console
#device          uart3                       # USART3
#device          uart4                       # UART4
#device          uart5                       # UART5
#device          uart6                       # USART6
#options         "UART_BAUD=115200"          # default speed

options         "CONS_MAJOR=UARTUSB_MAJOR"   # USB UART device
options         "CONS_MINOR=0"               # posing as uart0

controller      sdio0
# MicroSD card
device          sd0     at sdio0             # SD card uses SDIO
options         "NSD=1"                     # One disk on SDIO

options         "TEENSY_LED_KERNEL"	    # LED is always on pin 13 aka PORTC5
